    reminderInterval: 120, // 2 hours
    reminderIntervalType: 'hours',
    startTime: '08:00',
    endTime: '22:00',
    category: 'water',
    color: '#4FC3F7'
  },
  {
    name: 'Exercise',
    icon: 'üèÉ',
    description: 'Keep your body active and healthy',
    target: 30,
    unit: 'minutes',
    reminderEnabled: true,
    reminderInterval: 24, // 24 hours (once daily)
    reminderIntervalType: 'hours',
    startTime: '07:00',
    endTime: '08:00',
    category: 'exercise',
    color: '#FF8A65'
  },
  {
    name: 'Sleep',
    icon: 'üò¥',
    description: 'Get quality rest for recovery',
    target: 8,
    unit: 'hours',
    reminderEnabled: true,
    reminderInterval: 24, // 24 hours (once daily)
    reminderIntervalType: 'hours',
    startTime: '22:00',
    endTime: '23:00',
    category: 'sleep',
    color: '#9575CD'
  },
  {
    name: 'Meditation',
    icon: 'üßò',
    description: 'Practice mindfulness and reduce stress',
    target: 15,
    unit: 'minutes',
    reminderEnabled: false,
    reminderInterval: 24, // 24 hours (once daily)
    reminderIntervalType: 'hours',
    startTime: '08:00',
    endTime: '09:00',
    category: 'meditation',
    color: '#4DB6AC'
  }
];

const HABIT_ICONS = ['üíß', 'üèÉ', 'üò¥', 'üßò', 'ü•ó', 'üìö', 'üéØ', 'üí™', 'üß†', 'üé®'];
const HABIT_COLORS = ['#4FC3F7', '#FF8A65', '#9575CD', '#4DB6AC', '#81C784', '#FFB74D', '#F06292', '#64B5F6', '#A1887F', '#9CCC65'];

export default function HabitManageScreen() {
  const colorScheme = useColorScheme();
  const colors = Colors[colorScheme ?? 'light'];

  const [habits, setHabits] = useState<Habit[]>(() =>
    DEFAULT_HABITS.map((habit, index) => ({ ...habit, id: `default-${index}` }))
  );

  const [modalVisible, setModalVisible] = useState(false);
  const [editingHabit, setEditingHabit] = useState<Habit | null>(null);
  const [formData, setFormData] = useState<Omit<Habit, 'id'>>({
    name: '',
    icon: 'üíß',
    description: '',
    target: 1,
    unit: 'times',
    reminderEnabled: true,
    reminderInterval: 60,
    reminderIntervalType: 'hours',
    startTime: '09:00',
    endTime: '17:00',
    category: 'custom',
    color: '#4FC3F7'
  });

  const resetForm = () => {
    setFormData({
      name: '',
      icon: 'üíß',
      description: '',
      target: 1,
      unit: 'times',
      reminderEnabled: true,
      reminderInterval: 60,
      reminderIntervalType: 'hours',
      startTime: '09:00',
      endTime: '17:00',
      category: 'custom',
      color: '#4FC3F7'
    });
    setEditingHabit(null);
  };

  const openModal = (habit?: Habit) => {
    if (habit) {
      setEditingHabit(habit);
      setFormData(habit);
    } else {
      resetForm();
    }
    setModalVisible(true);
  };

  const closeModal = () => {
    setModalVisible(false);
    resetForm();
  };

  const saveHabit = () => {
    if (!formData.name.trim()) {
      Alert.alert('Error', 'Please enter a habit name');
      return;
    }

    if (formData.target <= 0) {
      Alert.alert('Error', 'Target must be greater than 0');
      return;
    }

    if (editingHabit) {
      // Update existing habit
      setHabits(prevHabits =>
        prevHabits.map(habit =>
          habit.id === editingHabit.id
            ? { ...formData, id: editingHabit.id }
            : habit
        )
      );
      Alert.alert('Success', 'Habit updated successfully!');
    } else {
      // Create new habit
      const newHabit: Habit = {
        ...formData,
        id: `custom-${Date.now()}`
      };
      setHabits(prevHabits => [...prevHabits, newHabit]);
      Alert.alert('Success', 'Habit created successfully!');
    }

    closeModal();
  };

  const deleteHabit = (habitId: string) => {
    Alert.alert(
      'Delete Habit',
      'Are you sure you want to delete this habit? This action cannot be undone.',
      [
        { text: 'Cancel', style: 'cancel' },
        {
          text: 'Delete',
          style: 'destructive',
          onPress: () => {
            setHabits(prevHabits => prevHabits.filter(habit => habit.id !== habitId));
            Alert.alert('Success', 'Habit deleted successfully!');
          }
        }
      ]
    );
  };

  const toggleHabitStatus = (habitId: string) => {
    setHabits(prevHabits =>
      prevHabits.map(habit =>
        habit.id === habitId
          ? { ...habit, reminderEnabled: !habit.reminderEnabled }
          : habit
      )
    );
  };

  const renderHabitCard = (habit: Habit) => (
    <View
      key={habit.id}
      style={[
        styles.habitCard,
        {
          backgroundColor: colors.card,
          borderColor: colors.border,
        }
      ]}
    >
      <View style={styles.habitHeader}>
        <View style={styles.habitInfo}>
          <Text style={styles.habitIcon}>{habit.icon}</Text>
          <View style={styles.habitDetails}>
            <Text style={[styles.habitName, { color: colors.text }]}>
              {habit.name}
            </Text>
            <Text style={[styles.habitDescription, { color: colors.textSecondary }]}>
              {habit.description}
            </Text>
            <Text style={[styles.habitGoal, { color: habit.color }]}>
              Goal: {habit.target} {habit.unit} per day
            </Text>
          </View>
        </View>

        <View style={[styles.statusIndicator, { backgroundColor: habit.reminderEnabled ? habit.color : colors.backgroundSecondary }]}>
          <Text style={[styles.statusText, { color: habit.reminderEnabled ? '#fff' : colors.textSecondary }]}>
            {habit.reminderEnabled ? 'ON' : 'OFF'}
          </Text>
        </View>
      </View>

      <View style={styles.reminderInfo}>
        <Text style={[styles.reminderText, { color: colors.textSecondary }]}>
          {habit.reminderEnabled
            ? `Remind every ${habit.reminderInterval} ${habit.reminderIntervalType} from ${habit.startTime} to ${habit.endTime}`
            : 'Reminders disabled'
          }
        </Text>
      </View>

      <View style={styles.habitActions}>
        <TouchableOpacity
          style={[styles.actionButton, { backgroundColor: colors.backgroundSecondary }]}
          onPress={() => toggleHabitStatus(habit.id)}
        >
          <Text style={[styles.actionButtonText, { color: colors.text }]}>
            {habit.reminderEnabled ? 'Disable' : 'Enable'}
          </Text>
        </TouchableOpacity>

        <TouchableOpacity
          style={[styles.actionButton, { backgroundColor: colors.primary }]}
          onPress={() => openModal(habit)}
        >
          <Text style={[styles.actionButtonText, { color: '#fff' }]}>Edit</Text>
        </TouchableOpacity>

        <TouchableOpacity
          style={[styles.actionButton, { backgroundColor: '#F44336' }]}
          onPress={() => deleteHabit(habit.id)}
        >
          <Text style={[styles.actionButtonText, { color: '#fff' }]}>Delete</Text>
        </TouchableOpacity>
      </View>
    </View>
  );

  return (
    <SafeAreaView style={[styles.container, { backgroundColor: colors.background }]}>
      <StatusBar style={colorScheme === 'dark' ? 'light' : 'dark'} />

      {/* Header */}
      <LinearGradient
        colors={[colors.background, colors.backgroundSecondary, colors.gradientStart]}
        start={{ x: 0.5, y: 0 }}
        end={{ x: 0.5, y: 1 }}
        style={styles.header}
      >
        <Text style={[styles.headerTitle, { color: colors.text }]}>
          Manage Habits
        </Text>
        <Text style={[styles.headerSubtitle, { color: colors.textSecondary }]}>
          Create and customize your healthy habits
        </Text>
      </LinearGradient>

      {/* Habits List */}
      <ScrollView style={styles.scrollView} contentContainerStyle={styles.scrollContent}>
        {habits.map(renderHabitCard)}

        <TouchableOpacity
          style={[styles.addButton, { backgroundColor: colors.primary }]}
          onPress={() => openModal()}
        >
          <Text style={styles.addButtonText}>+ Add New Habit</Text>
        </TouchableOpacity>

        <View style={styles.footerSpace} />
      </ScrollView>

      {/* Add/Edit Modal */}
      <Modal
        visible={modalVisible}
        animationType="slide"
        presentationStyle="pageSheet"
        onRequestClose={closeModal}
      >
        <SafeAreaView style={[styles.modalContainer, { backgroundColor: colors.background }]}>
          <StatusBar style={colorScheme === 'dark' ? 'light' : 'dark'} />

          <View style={styles.modalHeader}>
            <TouchableOpacity onPress={closeModal}>
              <Text style={[styles.cancelButton, { color: colors.textSecondary }]}>Cancel</Text>
            </TouchableOpacity>
            <Text style={[styles.modalTitle, { color: colors.text }]}>
              {editingHabit ? 'Edit Habit' : 'Create New Habit'}
            </Text>
            <TouchableOpacity onPress={saveHabit}>
              <Text style={[styles.saveButton, { color: colors.primary }]}>Save</Text>
            </TouchableOpacity>
          </View>

          <ScrollView style={styles.modalContent} showsVerticalScrollIndicator={false}>
            {/* Basic Info */}
            <View style={styles.formSection}>
              <Text style={[styles.sectionLabel, { color: colors.text }]}>Basic Information</Text>

              <View style={styles.iconSelector}>
                <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Icon</Text>
                <ScrollView horizontal showsHorizontalScrollIndicator={false}>
                  <View style={styles.iconList}>
                    {HABIT_ICONS.map((icon) => (
                      <TouchableOpacity
                        key={icon}
                        style={[
                          styles.iconOption,
                          {
                            backgroundColor: formData.icon === icon ? colors.primary : colors.card,
                            borderColor: colors.border
                          }
                        ]}
                        onPress={() => setFormData({ ...formData, icon })}
                      >
                        <Text style={styles.iconOptionText}>{icon}</Text>
                      </TouchableOpacity>
                    ))}
                  </View>
                </ScrollView>
              </View>

              <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Habit Name</Text>
              <TextInput
                style={[
                  styles.textInput,
                  {
                    backgroundColor: colors.card,
                    color: colors.text,
                    borderColor: colors.border,
                  }
                ]}
                value={formData.name}
                onChangeText={(text) => setFormData({ ...formData, name: text })}
                placeholder="Enter habit name"
                placeholderTextColor={colors.textSecondary}
              />

              <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Description</Text>
              <TextInput
                style={[
                  styles.textInput,
                  styles.textArea,
                  {
                    backgroundColor: colors.card,
                    color: colors.text,
                    borderColor: colors.border,
                  }
                ]}
                value={formData.description}
                onChangeText={(text) => setFormData({ ...formData, description: text })}
                placeholder="Describe your habit"
                placeholderTextColor={colors.textSecondary}
                multiline
              />
            </View>

            {/* Goal Settings */}
            <View style={styles.formSection}>
              <Text style={[styles.sectionLabel, { color: colors.text }]}>Daily Goal</Text>

              <View style={styles.row}>
                <View style={styles.halfWidth}>
                  <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Target</Text>
                  <TextInput
                    style={[
                      styles.textInput,
                      {
                        backgroundColor: colors.card,
                        color: colors.text,
                        borderColor: colors.border,
                      }
                    ]}
                    value={formData.target.toString()}
                    onChangeText={(text) => setFormData({ ...formData, target: parseInt(text) || 1 })}
                    keyboardType="numeric"
                  />
                </View>

                <View style={styles.halfWidth}>
                  <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Unit</Text>
                  <TextInput
                    style={[
                      styles.textInput,
                      {
                        backgroundColor: colors.card,
                        color: colors.text,
                        borderColor: colors.border,
                      }
                    ]}
                    value={formData.unit}
                    onChangeText={(text) => setFormData({ ...formData, unit: text })}
                    placeholder="e.g., glasses, minutes"
                  />
                </View>
              </View>

              <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Color</Text>
              <ScrollView horizontal showsHorizontalScrollIndicator={false}>
                <View style={styles.colorList}>
                  {HABIT_COLORS.map((color) => (
                    <TouchableOpacity
                      key={color}
                      style={[
                        styles.colorOption,
                        {
                          backgroundColor: color,
                          borderWidth: formData.color === color ? 3 : 1,
                          borderColor: formData.color === color ? colors.text : 'transparent'
                        }
                      ]}
                      onPress={() => setFormData({ ...formData, color })}
                    />
                  ))}
                </View>
              </ScrollView>
            </View>

            {/* Reminder Settings */}
            <View style={styles.formSection}>
              <View style={styles.switchRow}>
                <Text style={[styles.sectionLabel, { color: colors.text }]}>Reminder Settings</Text>
                <Text style={[styles.switchLabel, { color: colors.textSecondary }]}>
                  {formData.reminderEnabled ? 'Enabled' : 'Disabled'}
                </Text>
              </View>

              <View style={styles.row}>
                <View style={styles.halfWidth}>
                  <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Interval</Text>
                  <TextInput
                    style={[
                      styles.textInput,
                      {
                        backgroundColor: colors.card,
                        color: colors.text,
                        borderColor: colors.border,
                      }
                    ]}
                    value={formData.reminderInterval.toString()}
                    onChangeText={(text) => setFormData({ ...formData, reminderInterval: parseInt(text) || 60 })}
                    keyboardType="numeric"
                  />
                </View>

                <View style={styles.halfWidth}>
                  <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>Type</Text>
                  <View style={styles.segmentedControl}>
                    {(['minutes', 'hours'] as const).map((type) => (
                      <TouchableOpacity
                        key={type}
                        style={[
                          styles.segmentButton,
                          {
                            backgroundColor: formData.reminderIntervalType === type ? colors.primary : colors.card,
                            borderColor: colors.border,
                          }
                        ]}
                        onPress={() => setFormData({ ...formData, reminderIntervalType: type })}
                      >
                        <Text style={[
                          styles.segmentButtonText,
                          { color: formData.reminderIntervalType === type ? '#fff' : colors.text }
                        ]}>
                          {type}
                        </Text>
                      </TouchableOpacity>
                    ))}
                  </View>
                </View>
              </View>

              <View style={styles.row}>
                <View style={styles.halfWidth}>
                  <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>From</Text>
                  <TextInput
                    style={[
                      styles.textInput,
                      {
                        backgroundColor: colors.card,
                        color: colors.text,
                        borderColor: colors.border,
                      }
                    ]}
                    value={formData.startTime}
                    onChangeText={(text) => setFormData({ ...formData, startTime: text })}
                    placeholder="09:00"
                  />
                </View>

                <View style={styles.halfWidth}>
                  <Text style={[styles.inputLabel, { color: colors.textSecondary }]}>To</Text>
                  <TextInput
                    style={[
                      styles.textInput,
                      {
                        backgroundColor: colors.card,
                        color: colors.text,
                        borderColor: colors.border,
                      }
                    ]}
                    value={formData.endTime}
                    onChangeText={(text) => setFormData({ ...formData, endTime: text })}
                    placeholder="17:00"
                  />
                </View>
              </View>
            </View>

            <View style={styles.footerSpace} />
          </ScrollView>
        </SafeAreaView>
      </Modal>
    </SafeAreaView>
  );
}

