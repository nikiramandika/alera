import {
  View,
  Text,
  StyleSheet,
  ScrollView,
  TouchableOpacity,
  TextInput,
  Alert,
  Platform,
  Modal
} from 'react-native';
import { SafeAreaView } from 'react-native-safe-area-context';
import { StatusBar } from 'expo-status-bar';
import { LinearGradient } from 'expo-linear-gradient';
import { useColorScheme } from '@/hooks/use-color-scheme';
import { Colors } from '@/constants/theme';

interface Habit {
  id: string;
  name: string;
  icon: string;
  description: string;
  target: number;
  unit: string;
  reminderEnabled: boolean;
  reminderInterval: number; // in minutes
  reminderIntervalType: 'minutes' | 'hours';
  startTime: string;
  endTime: string;
  category: 'water' | 'exercise' | 'sleep' | 'meditation' | 'custom';
  color: string;
}

